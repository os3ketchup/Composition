<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="uz.os3ketchup.composition.presentation.GameViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.GameFragment">


        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:text="@{viewModel.formattedTime}"
            android:textSize="36sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="00:00" />

        <TextView
            android:id="@+id/tv_sum"
            style="@style/QuestionTextStyle"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:background="@drawable/circle_background"
            app:getNumberAsText="@{viewModel.question.sum}"
            app:layout_constraintBottom_toTopOf="@id/tv_left_number"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_left_number"
            style="@style/QuestionTextStyle"
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:background="@color/purple"
            app:getNumberAsText="@{viewModel.question.visibleNumber}"
            app:layout_constraintBottom_toTopOf="@id/ll_top"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_question"
            app:layout_constraintTop_toBottomOf="@id/tv_sum" />

        <TextView
            android:id="@+id/tv_question"
            style="@style/QuestionTextStyle"
            android:layout_width="0dp"
            android:layout_height="122dp"
            android:background="@color/black"
            android:text="@string/question_mark"
            app:layout_constraintBottom_toBottomOf="@id/tv_left_number"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toRightOf="@id/tv_left_number"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_left_number" />

        <TextView
            android:id="@+id/tv_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:text="@{viewModel.progressAnswers}"
            android:textSize="24sp"
            app:getColor="@{viewModel.enoughCount}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_left_number" />

        <ProgressBar
            android:id="@+id/progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:getEnoughPercent="@{viewModel.enoughPercent}"
            app:getPercent="@{viewModel.minPercent}"
            app:getPercentOfRightAnswers="@{viewModel.percentOfRightAnswers}"
            app:layout_constraintTop_toBottomOf="@id/tv_information" />

        <LinearLayout
            android:id="@+id/ll_btm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/tv_opt4"
                style="@style/OptionTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/ocean"
                android:gravity="center"
                android:text="@{viewModel.question.options.get(3).toString()}"
                app:onOptionClickListener="@{(option)->viewModel.chooseAnswer(option)}" />

            <TextView
                android:id="@+id/tv_opt5"
                style="@style/OptionTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/purple"
                android:text="@{viewModel.question.options.get(4).toString()}"
                app:onOptionClickListener="@{(option)->viewModel.chooseAnswer(option)}" />

            <TextView
                android:id="@+id/tv_opt6"
                style="@style/OptionTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/black"
                android:text="@{viewModel.question.options.get(5).toString()}"
                app:onOptionClickListener="@{(option)->viewModel.chooseAnswer(option)}" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/ll_btm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/tv_opt1"
                style="@style/OptionTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/purple"
                android:gravity="center"
                android:text="@{viewModel.question.options.get(0).toString()}"
                app:onOptionClickListener="@{(option)->viewModel.chooseAnswer(option)}" />

            <TextView
                android:id="@+id/tv_opt2"
                style="@style/OptionTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/classic"
                android:text="@{viewModel.question.options.get(1).toString()}"
                app:onOptionClickListener="@{(option)->viewModel.chooseAnswer(option)}" />

            <TextView
                android:id="@+id/tv_opt3"
                style="@style/OptionTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/light_ocean"
                android:text="@{viewModel.question.options.get(2).toString()}"
                app:onOptionClickListener="@{(option)->viewModel.chooseAnswer(option)}" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>